<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView_vendor"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/vendor_name"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:background="@drawable/rounded_corner"
                            android:textColor="@color/white"
                            android:id="@+id/vendor_rating"
                            android:text="4.0"
                            android:textSize="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:gravity="center_vertical|center_horizontal" />


                    </RelativeLayout>

                    <TextView
                        android:textSize="16dp"
                        android:id="@+id/textView_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/toolbarTextColorSecondary"/>



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16dp"
                            android:id="@+id/textView_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/toolbarTextColorSecondary"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/yelp_logo"
                                android:src="@drawable/yelp_logo" />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/user_review_user_picture"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />


                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/user_review_how_many"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/grade_1"
                    android:visibility="gone"
                    android:src="@drawable/ic_grade_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/grade_2"
                    android:visibility="gone"
                    android:src="@drawable/ic_grade_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/grade_3"
                    android:visibility="gone"
                    android:src="@drawable/ic_grade_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/grade_4"
                    android:visibility="gone"
                    android:src="@drawable/ic_grade_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/grade_5"
                    android:visibility="gone"
                    android:src="@drawable/ic_grade_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




                <TextView
                    android:gravity="right"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/toolbarTextColorSecondary"
                    android:id="@+id/user_review_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>


            <LinearLayout
                android:paddingTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:id="@+id/user_review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>


            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:id="@+id/user_review_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />





        </LinearLayout>


    </android.support.v7.widget.CardView>




</FrameLayout>
